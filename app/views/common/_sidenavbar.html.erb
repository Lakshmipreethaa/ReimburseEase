<!DOCTYPE html>
<html>
<head>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://kit.fontawesome.com/782f789d60.js" crossorigin="anonymous"></script>
  <script>
    $(document).ready(function() {
      $('.list-group-item').on('click', function(event) {
        event.preventDefault();

        var url = $(this).attr('href');

        window.location.href = url;

        updateActiveSidebarItem(url);
      });

      function updateActiveSidebarItem(url) {
        $('.list-group-item').removeClass('active');
        $('.list-group-item[href="' + url + '"]').addClass('active');
      }

      var activeSidebarItem = window.location.pathname;
      updateActiveSidebarItem(activeSidebarItem);
    });
  </script>
</head>
</body>
  <main style="margin-top: 58px;">
    <div id="sidebarContainer" class="container pt-4">
      <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white" style="border-radius: 10px;">
