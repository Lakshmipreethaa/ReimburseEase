          <div class="list-group list-group-flush mx-3 mt-4">
            <a href="/home/index" class="navbar-brand" href="#"><em class="text-danger">ReimburseEase</em></a>
            <a href="/home/index" class="list-group-item list-group-item-action py-2 ripple">
              <i class="fa fa-tachometer fa-fw me-3"></i><span>Dashboard</span>
            </a>
            <a href="/employees" class="list-group-item list-group-item-action py-2 ripple">
              <i class="fa-regular fa-user fa-fw me-3"></i><span>Employees</span>
            </a>
            <a href="/departments" class="list-group-item list-group-item-action py-2 ripple">
              <i class="fas fa-lock fa-fw me-3"></i><span>Departments</span>
            </a>
            <a href="/designations" class="list-group-item list-group-item-action py-2 ripple">
              <i class="fas fa-chart-line fa-fw me-3"></i><span>Designations</span>
            </a>
            <a href="/bills" class="list-group-item list-group-item-action py-2 ripple">
              <i class="fa-file-text fa-fw me-3"></i><span>Bills</span>
            </a>
          </div>
        </div>
      </nav>
    </div>
    <div class="container pt-4">
    </div>
  </main>
</body>
</html>
