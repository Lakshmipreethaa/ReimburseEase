    <div class="card-body">
      <div class="row">
        <div class="col">
          <br>
          <h4 class="card-text" style="font-family:fantasy;">Total Bills Submitted:   <%= @total_bills %></h4>
        </div>
        <div class="col">
          <br>
          <h4 class="card-text" style="font-family:fantasy;">Total Amount: Rs. <%= @total_amount %></h4>
        </div>
        <div class="col">
          <br>
          <h4 class="card-text" style="font-family:fantasy;">Total Employees: <%= @total_employees %></h4>
        </div>
      </div>
    </div>
  </div>
</div>
