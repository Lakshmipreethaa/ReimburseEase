<%= form_with(model: department) do |form| %>
  <% if department.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h2>

      <ul>
        <% department.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div style="text-align: left;">
      <%= form.label :name, "Name of Department" %>
    </div>
    <%= form.text_field :name, class: "form-control", id: "name", placeholder: "Enter department Name" %>
  </div>
  <br>
  <div class="modal-footer">
    <%= button_tag "Save", class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
