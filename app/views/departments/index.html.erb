            <% end %>
          </tbody>
        </table>
        <div class="pagination">
          <%= will_paginate @bills, outer_window: 1, inner_window: 2, previous_label: '&laquo; Previous', next_label: 'Next &raquo;', class: 'pagination-links' %>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: 'shared/editdepartment' %>
</body>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const editButtons = document.querySelectorAll('.edit-button');

    editButtons.forEach(function(editButton) {
      editButton.addEventListener('click', function() {
        const departmentId = this.dataset.departmentId;
        const modalBody = document.querySelector('#editDepartmentsModal .modal-body');
        const xhr = new XMLHttpRequest();
        xhr.open('GET', '/departments/' + departmentId + '/edit');
        xhr.onload = function() {
          if (xhr.status === 200) {
            modalBody.innerHTML = xhr.responseText;
            const form = modalBody.querySelector('form');
            form.addEventListener('submit', function(event) {
              event.preventDefault();
              const formData = new FormData(form);
              const xhr = new XMLHttpRequest();
              xhr.open('PATCH', '/departments/' + departmentId);
              xhr.setRequestHeader('Accept', 'application/json');
              xhr.onload = function() {
                if (xhr.status === 200) {
                  const response = JSON.parse(xhr.responseText);
                  if (response.success) {
                    $('#editDepartmentsModal').modal('hide');
                    location.reload();
                  } else {
                    const errorDiv = form.querySelector('.errors');
                    errorDiv.innerHTML = response.errors.join(', ');
                  }
                } else {
                  console.error('Request failed. Status: ' + xhr.status);
                }
              };
              xhr.send(formData);
            });
            $('#editDepartmentsModal').modal('show');
          } else {
            console.error('Request failed. Status: ' + xhr.status);
          }
        };
        xhr.send();
      });
    });
  });
  function deleteDepartment(departmentId) {
    const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
    fetch(`/departments/${departmentId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': '<%= form_authenticity_token %>'
      }
    })
    .then(response => {
      if (response.ok) {
        console.log('Department deleted successfully');
      } else {
        console.error('Error deleting the Department:', response.status);
      }
      location.reload();
    })
    .catch(error => {
      console.error('Error deleting the designation:', error);
    });
  }
</script>
